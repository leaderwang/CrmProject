@using Common;
@using MvcPager;
@using Lib;
@using Models;
@model PagedList<Employee>
<table class="table table-striped">
    <thead>
        <tr>
          <th class="checkbox-column">
                <input type="checkbox" name="checkall" onchange="selectall(this,'ID')" />
            </th>
                           <th class="sorting" data-sort="ID">ID</th>
               <th class="sorting" data-sort="CompanyID">教育机构ID</th>
               <th class="sorting" data-sort="EmployeeNo">员工编号</th>
               <th class="sorting" data-sort="UserName">员工姓名</th>
               <th class="sorting" data-sort="EnglishName">英文名</th>
               <th class="sorting" data-sort="Status">状态</th>
               <th class="sorting" data-sort="IDcard">身份证</th>
               <th class="sorting" data-sort="BirthDate">出生日期</th>
               <th class="sorting" data-sort="Mobile">联系电话</th>
               <th class="sorting" data-sort="Avatar">Avatar</th>
               <th class="sorting" data-sort="Address">地址</th>
               <th class="sorting" data-sort="Email">Email</th>
               <th class="sorting" data-sort="QQ">QQ</th>
               <th class="sorting" data-sort="WeiXin">WeiXin</th>
               <th class="sorting" data-sort="Remark">备注</th>

            <th class="btns-column">
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               <td class="checkbox-column"><input type="checkbox" name="ID" value="@item.ID"/></td>
                               <td>@item.ID</td>
               <td>@item.CompanyID</td>
               <td>@item.EmployeeNo</td>
               <td>@item.UserName</td>
               <td>@item.EnglishName</td>
               <td>@item.Status</td>
               <td>@item.IDcard</td>
               <td>@item.BirthDate</td>
               <td>@item.Mobile</td>
               <td>@item.Avatar</td>
               <td>@item.Address</td>
               <td>@item.Email</td>
               <td>@item.QQ</td>
               <td>@item.WeiXin</td>
               <td>@item.Remark</td>

                <td class="btns-column">
					@Html.ViewButton("详细", "/admin/Employee/Detail", new { href = "/admin/Employee/Detail?id=" + item.ID })
					@Html.EditButton("编辑", "/admin/Employee/Edit", new { href = "/admin/Employee/Edit?id=" + item.ID })
					@Html.DeleteButton("删除", "/admin/Employee/Delete", new { href = "javascript:void(0);", onclick = "Delete('/admin/Employee/Delete/" + item.ID + "',this,'one');" })
				</td>
            </tr>
        }
    </tbody>
</table>
<div class="dt_footer fixed">
    <div class="row-fluid">
        <div class="span4">
            <div class="dataTables_info" id="DataTables_Table_0_info">
                @Model.CurrentPageIndex/@Model.TotalPageCount 页, 共@(Model.TotalItemCount)条记录
            </div>
        </div>
        <div class="span8">
            <div class="pagination">@Html.Pager(Model)</div>
        </div>
    </div>
</div>
@Html.PermissionValideScript()
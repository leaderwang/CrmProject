@using Common;
@using Models;
@model Customer
<div class="control-group"><label class="control-label">ID</label><div class="controls"><input id="ID" name ="ID" type="text" value ="@Model.ID" required readonly="readonly" /></div></div>
<div class="control-group"><label class="control-label">OpenID</label><div class="controls"><textarea id="OpenID" name ="OpenID">@Model.OpenID</textarea></div></div>
<div class="control-group"><label class="control-label">用户名</label><div class="controls"><input id="UserName" name ="UserName" type="text" value ="@Model.UserName" /></div></div>
<div class="control-group"><label class="control-label">RealName</label><div class="controls"><textarea id="RealName" name ="RealName">@Model.RealName</textarea></div></div>
<div class="control-group"><label class="control-label">手机号</label><div class="controls"><input id="Mobile" name ="Mobile" type="text" value ="@Model.Mobile" required /></div></div>
<div class="control-group"><label class="control-label">宣言</label><div class="controls"><input id="Province" name ="Province" type="text" value ="@Model.Province" /></div></div>
<div class="control-group"><label class="control-label">City</label><div class="controls"><textarea id="City" name ="City">@Model.City</textarea></div></div>
<div class="control-group"><label class="control-label">身份证号</label><div class="controls"><textarea id="Region" name ="Region">@Model.Region</textarea></div></div>
<div class="control-group"><label class="control-label">地址</label><div class="controls"><textarea id="Address" name ="Address">@Model.Address</textarea></div></div>
<div class="control-group"><label class="control-label">邮件地址</label><div class="controls"><input id="Email" name ="Email" type="text" value ="@Model.Email" /></div></div>
<div class="control-group"><label class="control-label">头像</label><div class="controls"><input id="Avatar" name ="Avatar" type="text" value ="@Model.Avatar" /></div></div>
<div class="control-group"><label class="control-label">总积分</label><div class="controls"><input id="TotalScore" name ="TotalScore" type="text" value ="@Model.TotalScore" style="width:30px;" required/></div></div>
<div class="control-group"><label class="control-label">当前积分</label><div class="controls"><input id="CurrentScore" name ="CurrentScore" type="text" value ="@Model.CurrentScore" style="width:30px;" required/></div></div>
<div class="control-group"><label class="control-label">用户状态</label><div class="controls"><input id="Status" name ="Status" type="text" value ="@Model.Status" style="width:30px;" required/></div></div>
<div class="control-group"><label class="control-label">Tab</label><div class="controls"><input id="Tab" name ="Tab" type="text" value ="@Model.Tab" /></div></div>

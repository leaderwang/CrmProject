@using Common;
@using Models;
@model Question
<div class="control-group"><label class="control-label">ID</label><div class="controls"><input id="ID" name ="ID" type="text" value ="@Model.ID" required readonly="readonly" /></div></div>
<div class="control-group"><label class="control-label">ExamID</label><div class="controls"><input id="ExamID" name ="ExamID" type="text" value ="@Model.ExamID" style="width:30px;" required/></div></div>
<div class="control-group"><label class="control-label">Name</label><div class="controls"><textarea id="Name" name ="Name" required>@Model.Name</textarea></div></div>
<div class="control-group"><label class="control-label">TypeID</label><div class="controls"><input id="TypeID" name ="TypeID" type="text" value ="@Model.TypeID" style="width:30px;" required/></div></div>
<div class="control-group"><label class="control-label">Answer</label><div class="controls"><textarea id="Answer" name ="Answer">@Model.Answer</textarea></div></div>
<div class="control-group"><label class="control-label">IsMultiSelect</label><div class="controls"><select id="IsMultiSelect" name ="IsMultiSelect" val="@Model.IsMultiSelect"><option value="">请选择..</option><option value="True">是</option><option value="False">否</option></select></div></div>
<div class="control-group"><label class="control-label">Files</label><div class="controls"><textarea id="Files" name ="Files">@Model.Files</textarea></div></div>

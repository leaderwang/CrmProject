@using Common;
@using Models;
@model EduCompany
<div class="control-group"><label class="control-label">ID</label><div class="controls"><input id="ID" name ="ID" type="text" value ="@Model.ID" required readonly="readonly" /></div></div>
<div class="control-group"><label class="control-label">编号</label><div class="controls"><input id="CompanyNo" name ="CompanyNo" type="text" value ="@Model.CompanyNo" required /></div></div>
<div class="control-group"><label class="control-label">名称</label><div class="controls"><textarea id="CompanyName" name ="CompanyName" required>@Model.CompanyName</textarea></div></div>
<div class="control-group"><label class="control-label">简介</label><div class="controls"><textarea id="Abstract" name ="Abstract" required>@Model.Abstract</textarea></div></div>
<div class="control-group"><label class="control-label">详情</label><div class="controls"><input id="Content" name ="Content" type="text" value ="@Model.Content" required /></div></div>
<div class="control-group"><label class="control-label">类型</label><div class="controls"><input id="Type" name ="Type" type="text" value ="@Model.Type" style="width:30px;" required/></div></div>
<div class="control-group"><label class="control-label">状态</label><div class="controls"><input id="Status" name ="Status" type="text" value ="@Model.Status" style="width:30px;" required/></div></div>

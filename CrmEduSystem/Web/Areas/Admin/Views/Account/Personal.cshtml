@{
    ViewBag.Title = "Personal";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";   
}
@model Models.Member
<script>
    $(function () { wizard_init(); });
</script>
<div class="row-fluid">
    <div class="span12 widget">
        <div class="widget-header light">
            <span class="title"><i class="icon-user"></i>账户管理</span>
        </div>
        <div class="widget-content form-container">
            <div class="wizard" data-step="@Request.QueryString["op"]">
                <div class="wizard-nav wizard-nav-horizontal">
                    <ul>
                        <li data-target="wzd_1"><span><i class="icon-pencil"></i>设置头像</span></li>
                        <li data-target="wzd_2"><span><i class="icos-home"></i>账户信息</span></li>
                        <li data-target="wzd_3"><span><i class="icos-calendar-today"></i>修改密码</span></li>
                    </ul>
                </div>
                <div id="wzd_1" class="wizard-step">
                    <iframe src="/areas/admin/content/fileresize/avatar.aspx" frameborder="0" scrolling="no" style="width: 100%; height: 800px;"></iframe>
                </div>
                <div id="wzd_2" class="wizard-step">
                    <form id="form_2" action="/admin/Account/Personal" method="post" class="validator">
                        <div class="control-group">
                            <label class="control-label">用户名</label><div class="controls">
                                <input id="UserName" name ="UserName" type="text" value ="@Model.UserName" disabled />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">真实姓名</label><div class="controls">
                                <input id="RealName" name ="RealName" type="text" value ="@Model.RealName" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">邮箱</label><div class="controls">
                                <input id="Email" name ="Email" type="text" value ="@Model.Email" required regex="email" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">联系电话</label><div class="controls">
                                <input id="Mobile" name ="Mobile" type="text" value ="@Model.Mobile" required />
                            </div>
                        </div>
                        <div class="form-actions">
                            <input type="submit" class="btn btn-primary" value="保 存" />
                        </div>
                    </form>
                </div>
                <div id="wzd_3" class="wizard-step">
                    <form id="form_3" action="/admin/Account/ReSetPwd" method="post" class="validator">
                        <div class="control-group">
                            <label class="control-label">旧密码</label><div class="controls">
                                <input id="OldPwd" name="OldPwd" type="password" value="" required />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">新密码</label><div class="controls">
                                <input id="PwdNotMd5" name="PwdNotMd5" type="password" value="" required min="5" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">新密码确认</label><div class="controls">
                                <input id="ConfirmPwd" name="ConfirmPwd" type="password" value="" required min="5" />
                            </div>
                        </div>
                        <div class="form-actions">
                            <input type="submit" class="btn btn-primary" value="保 存" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@using Common;
@using Models;
@model WorkTask
<div class="control-group"><label class="control-label">ID</label><div class="controls"><input id="ID" name ="ID" type="text" value ="@Model.ID" required readonly="readonly" /></div></div>
<div class="control-group"><label class="control-label">任务时间</label><div class="controls"><textarea id="TaskDate" name ="TaskDate">@Model.TaskDate</textarea></div></div>
<div class="control-group"><label class="control-label">任务名称</label><div class="controls"><textarea id="Title" name ="Title">@Model.Title</textarea></div></div>
<div class="control-group"><label class="control-label">任务描述</label><div class="controls"><textarea id="Content" name ="Content">@Model.Content</textarea></div></div>
<div class="control-group"><label class="control-label">任务类型</label><div class="controls"><input id="Type" name ="Type" type="text" value ="@Model.Type" style="width:30px;" required/></div></div>
<div class="control-group"><label class="control-label">任务状态</label><div class="controls"><input id="Status" name ="Status" type="text" value ="@Model.Status" style="width:30px;" required/></div></div>

@using System.Data;
@using Lib;
@using MvcPager;
@model PagedList<DataRow>
@{
    ViewBag.Title = "EditTable";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span12 widget">
        <div class="widget-header light">
            <span class="title"><i class="icon-pencil"></i>编辑 <span style="font-size: 13px;color:red;">列信息中包含描述或默认值的无法编辑</span></span>
        </div>
        <div class="widget-content form-container">
            <form name="myform" id="myform" action="" method="post" class="form-horizontal validator">
                @Html.Partial("_Form", Model, ViewData)
                <div class="form-actions fixed">
                    <input type="submit" class="btn btn-primary" value="保 存" />
                    <a class="btn" href="@Common.UrlHelper.BackUrl">返 回</a>
                </div>
            </form>
        </div>
    </div>
</div>
